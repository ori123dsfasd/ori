<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log"
    android:background="@color/logc"
    >




    <ImageView
        android:id="@+id/img1"
        android:layout_width="345dp"
        android:layout_height="223dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="498dp"
        android:src="@drawable/logo" />


    <EditText
        android:id="@+id/logemail"
        android:layout_width="394dp"
        android:layout_height="50dp"
        android:layout_above="@+id/logpassword"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_frame"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintVertical_bias="0.324"
        tools:visibility="visible">


    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logemail"
        android:layout_marginBottom="31dp"
        android:text="Hi! Lets Log you in"
        android:textAlignment="center"
        android:textColor="@color/white">

    </EditText>

    <EditText

        android:id="@+id/logpassword"
        android:layout_width="394dp"
        android:layout_height="50dp"
        android:layout_above="@+id/loginb"
        android:layout_marginBottom="39dp"
        android:background="@drawable/button_frame"
        android:hint="password"
        android:inputType="textPassword"
        android:longClickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logemail"
        app:layout_constraintVertical_bias="0.0"
        android:ems="15"/>

    <ImageView
        android:id="@+id/showhide"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/logpassword"
        android:layout_alignBottom="@+id/logpassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="355dp"
        android:layout_marginBottom="5dp" />


    <Button
        android:id="@+id/loginb"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/button_frame"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logpassword"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_above="@+id/forgotpass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="18dp"
        android:background="@color/logoc"
        android:textColor="@color/white"
        android:text="Sign In"
        android:id="@+id/sgin2"/>

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="82dp"
        android:background="@color/logoc"
        android:text="Forgot password?"
        android:textColor="@color/white" />

</RelativeLayout>